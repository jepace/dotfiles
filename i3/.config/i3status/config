general {
	output_format = "i3bar"
	colors = true
	interval = 5
}

order += "disk /"
order += "wireless wlan0"
order += "battery 0"
order += "load"
order += "volume master"
order += "tztime local"

#order += "disk /pool"
#order += "run_watch DHCP"
#order += "run_watch VPNC"
#order += "path_exists VPN"
#order += "ipv6"
#order += "ethernet em0"
#order += "ethernet _first_"
#order += "cpu__first_ 0"

wireless wlan0 {
    format_up = "%essid"
    # format_up = "%essid: %ip %quality / %bitrate"
    format_down = "(no WiFi)"
}

ethernet em0 {
    # if you use %speed, i3status requires the cap_net_admin capability
    format_up = "E: %ip (%speed)"
	format_down = "E: down"
}

battery 0 {
	format = "%status %percentage %remaining"
	format_down = "No battery"
	status_chr = "CHRG"
	status_bat = "BATT"
	status_full = ""
	status_unk = "(bad)"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10
}

run_watch DHCP {
	pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
	# file containing the PID of a vpnc process
	pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
    # path exists when a VPN tunnel launched by nmcli/nm-applet is
    # active
    path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
	format = "%a %I:%M%p %D"
}

load {
	format = "%5min"
}

# cpu_temperature 0 {
#   format = "T: %degrees Â°C"
#	path = "/sys/devices/platform/coretemp.0/temp1_input"
#}

disk "/" {
	format = "/: %free"
	low_threshold = "10"
	threshold_type = "percentage_free"
    prefix_type="custom"
}

disk "/pool" {
	format = "/pool: %free free"
	low_threshold = "5"
	threshold_type = "percentage_free"
}

volume master {
    format = "V: %volume"
    format_muted = "V: %volume [Mute]"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
